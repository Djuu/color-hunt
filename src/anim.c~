#include <stdio.h>
#include <stdlib.h>

#include "anim.h"

void animSpInit(SDL_Rect spAnim, int spDimX, int spDimY,int spDimL, int spDimH)
{
	spAnim.x=spDimX;
	spAnim.y=spDimY;
	spAnim.w=spDimL;
	spAnim.h=spDimH;
}

int AfficherMap(map* m,SDL_Surface* screen,sdlJeu *pSdlJeu)
{
	int i,j;
	int LARGEUR_TILE=20;
	int HAUTEUR_TILE=20;
	SDL_Rect Rect_dest;
	int numero_tile;
	int minx,maxx,miny,maxy;
	minx = m->xScroll / LARGEUR_TILE;
	miny = m->yScroll / HAUTEUR_TILE;
	maxx = (m->xScroll + m->largeurFenetre)/LARGEUR_TILE;
	maxy = (m->yScroll + m->hauteurFenetre)/HAUTEUR_TILE;
	for(i=minx;i<=maxx;i++)
	{
		for(j=miny;j<=maxy;j++)
		{
			Rect_dest.x = i*LARGEUR_TILE - m->xScroll;
			Rect_dest.y = j*HAUTEUR_TILE - m->yScroll;
			numero_tile = mapGetXY(m, i,j);
			SDL_BlitSurface(pSdlJeu->surfaceMap,NULL,screen,&Rect_dest);
		}
	}
	return 0;
}
